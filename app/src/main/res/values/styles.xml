<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="WhiteActionBar" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="background">@color/white</item>
        <item name="titleTextStyle">@style/WhiteActionBar.Title</item>
    </style>


    <style name="WhiteActionBar.Title" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="PrimaryDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!--<item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionBarTabStyle">@style/MyActionBarTabStyle</item>
        <item name="android:windowBackground">@drawable/bg</item>
        <item name="android:datePickerStyle">@android:style/Widget.DatePicker</item>
        <item name="android:actionBarTabTextStyle">@style/MyActionBarTabText</item>
        <item name="android:actionButtonStyle">@style/PrimaryBorderlessButton</item>
        <item name="android:colorBackground">@color/colorPrimary</item>-->
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="PrimaryTextView" parent="Theme.AppCompat.Light">
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="PrimaryBigTextView" parent="Theme.AppCompat.Light">
        <item name="android:textSize">@dimen/big_text_size</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="SecondarySemiBoldTextView" parent="Theme.AppCompat.Light">
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textColor">@color/greyish_blue</item>
    </style>

    <style name="SecondaryTextView" parent="Theme.AppCompat.Light">
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textColor">@color/greyish_blue</item>
    </style>

    <style name="SecondarySmallTextView" parent="Theme.AppCompat.Light">
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textColor">@color/greyish_blue</item>
    </style>

    <style name="PrimaryMediumTextView" parent="Theme.AppCompat.Light">
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="PrimarySmallTextView" parent="Theme.AppCompat.Light">
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="PrimaryLightEditText.WithoutBackgroundTint" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textColorHint">@color/colorPrimaryLight</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="SecondaryLightEditText.WithoutBackgroundTint" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textColorHint">@color/colorSecondaryLight</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="PrimaryTextButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/transparent</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="SecondaryTextButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/transparent</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textColor">@color/greyish_blue</item>
    </style>

    <style name="PrimaryBorderlessButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="SecondaryBorderlessButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/greyish_blue</item>
    </style>

</resources>
